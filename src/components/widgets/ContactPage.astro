---
import { getLangFromUrl, useTranslations } from '~/i18n/utils';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const language = getLangFromUrl(Astro.url);
const t = useTranslations(language);
---

<!-- HeroText Widget ******************* -->
<HeroText tagline={t('contact.hero.tagline')} title={t('contact.hero.title')} />

<ContactUs
  id="form"
  title={t('contact.form.title')}
  subtitle={t('contact.form.subtitle')}
  inputs={[
    {
      type: 'text',
      name: 'name',
      label: t('contact.form.name-label'),
      required: true,
    },
    {
      type: 'radio',
      name: 'role',
      label: t('contact.form.role-label'),
      variant: 'toggle',
      options: [
        { label: t('contact.form.role-skipper'), value: 'skipper' },
        { label: t('contact.form.role-operator'), value: 'operator' },
      ],
      required: true,
    },
    {
      type: 'email',
      name: 'email',
      label: t('contact.form.email-label'),
      required: true,
    },
  ]}
  textarea={{
    label: t('contact.form.message-label'),
    required: true,
  }}
  disclaimer={{
    label: t('contact.form.disclaimer'),
  }}
  button={t('contact.form.button')}
  description={t('contact.form.description')}
/>

<!-- Features2 Widget ************** -->

<Features2
  title={t('contact.features.title')}
  items={[
    {
      title: t('contact.features.general-support.title'),
      description: t('contact.features.general-support.description'),
    },
    {
      title: t('contact.features.contact-sales.title'),
      description: t('contact.features.contact-sales.description'),
    },
    {
      title: t('contact.features.technical-support.title'),
      description: t('contact.features.technical-support.description'),
    },
    {
      title: t('contact.features.email'),
      description: 'contact@smartbuoy.eu',
      icon: 'tabler:mail',
    },
    {
      title: t('contact.features.location'),
      description: 'Retzfeld 7, 4222, St. Georgen an der Gusen, Austria',
      icon: 'tabler:map-pin',
    },
  ]}
/>
