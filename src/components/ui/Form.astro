---
import type { Form as Props } from '~/types';
import Button from '~/components/ui/Button.astro';

const { inputs, textarea, disclaimer, button = 'Contact us', description = '' } = Astro.props;
---

<form name="contact" netlify netlify-honeypot="bot-field">
  <p class="hidden">
    <label>
      Don’t fill this out if you’re human: <input name="bot-field" />
    </label>
  </p>
  {
    inputs &&
      inputs.map(
        ({
          type = 'text',
          name,
          label = '',
          autocomplete = 'on',
          placeholder = '',
          options,
          variant,
          required,
        }) =>
          name &&
          (type === 'radio' && variant === 'toggle' && options?.length ? (
            <div class="mb-6">
              {label && (
                <label class="block text-sm font-medium mb-2">{label}</label>
              )}
              <div
                class="flex w-full p-0.5 rounded-lg border border-gray-200 dark:border-gray-700 bg-gray-100 dark:bg-slate-800"
                role="group"
                aria-label={label}
              >
                {options.map((opt, i) => (
                  <label
                    class="cursor-pointer flex-1 text-center py-2.5 px-4 text-sm font-medium rounded-md transition-colors has-[:checked]:bg-primary has-[:checked]:text-white has-[:checked]:shadow"
                  >
                    <input
                      type="radio"
                      name={name}
                      value={opt.value}
                      required={required}
                      class="sr-only"
                    />
                    {opt.label}
                  </label>
                ))}
              </div>
            </div>
          ) : (
            <div class="mb-6">
              {label && (
                <label for={name} class="block text-sm font-medium">
                  {label}
                </label>
              )}
              <input
                type={type}
                name={name}
                id={name}
                autocomplete={autocomplete}
                placeholder={placeholder}
                required={required}
                class="py-3 px-4 block w-full text-md rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900"
              />
            </div>
          ))
      )
  }

  {
    textarea && (
      <div>
        <label for="textarea" class="block text-sm font-medium">
          {textarea.label}
        </label>
        <textarea
          id="textarea"
          name={textarea.name ? textarea.name : 'message'}
          rows={textarea.rows ? textarea.rows : 4}
          placeholder={textarea.placeholder}
          required={textarea.required}
          class="py-3 px-4 block w-full text-md rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900"
        />
      </div>
    )
  }

  {
    disclaimer && (
      <div class="mt-3 flex items-start">
        <div class="flex mt-0.5">
          <input
            id="disclaimer"
            name="disclaimer"
            type="checkbox"
            class="cursor-pointer mt-1 py-3 px-4 block w-full text-md rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900"
          />
        </div>
        <div class="ml-3">
          <label for="disclaimer" class="cursor-pointer select-none text-sm text-gray-600 dark:text-gray-400">
            {disclaimer.label}
          </label>
        </div>
      </div>
    )
  }

  {
    button && (
      <div class="mt-10 grid">
        <Button variant="primary" type="submit">
          {button}
        </Button>
      </div>
    )
  }

  {
    description && (
      <div class="mt-3 text-center">
        <p class="text-sm text-gray-600 dark:text-gray-400">{description}</p>
      </div>
    )
  }
</form>
