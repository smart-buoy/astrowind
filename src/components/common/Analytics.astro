---
import { ANALYTICS } from 'astrowind:config';
---

{
  ANALYTICS?.vendors?.googleAnalytics?.id && (

<script type="text/plain"
        data-category="analytics" 
        async 
        src={`https://www.googletagmanager.com/gtag/js?id=${String(ANALYTICS.vendors.googleAnalytics.id)}`}></script>
<script type="text/plain"
        data-category="analytics" 
        define:vars={{ id: String(ANALYTICS.vendors.googleAnalytics.id) }}>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', id);
</script>
  )
}